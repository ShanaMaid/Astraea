{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "rootDir": "./src",
    "lib": ["es2017", "esnext",  "ES7", "ESNext.Array"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "baseUrl": "./src",
    "outDir": "lib"
  },
  "exclude": ["node_modules", "examples"]
}
